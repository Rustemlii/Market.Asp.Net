@model IEnumerable<DTO.EntityDTO.MessageDTO>
@{
    ViewData["Title"] = "AdminReview";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-heading">
	<h2>Rəylər</h2>
</div>
<div class="agile-tables">
	<div class="w3l-table-info">	
		<table id="table">
			<thead>
				<tr>
					<th>#</th>
					<th>Adi</th>
					<th>Mesaj</th>
					<th>Redaktə et</th>
					<th>Sil</th>

				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Id</td>
						<td>@item.Name</td>
						<td>@item.Description</td>
						<td>
							<a asp-controller="Admin" asp-action="AdminReviewUpdate" asp-route-id="@item.Id"
							   class="btn btn-primary" style="background-color:green">
								Redaktə et
							</a>
						</td>
						<td>
							<a asp-controller="Admin" asp-action="AdminReviewDelete" asp-route-id="@item.Id"
							   class="btn btn-warning" style="background-color:red">
								Sil
							</a>
						</td>


					</tr>
				}
			</tbody>
		</table>
	</div>


